#include <stdio.h>

void tampilkan_menu_utama() {
    printf("Menu Utama:\n");
    printf("1. Makanan\n");
    printf("2. Minuman\n");
    printf("3. Total\n");
    printf("4. Kembali\n");
    printf("5. Exit\n");
    printf("Pilih menu (1-5): ");
}

void tampilkan_menu_makanan() {
    printf("Menu Makanan:\n");
    printf("1. Pecel Lele - Rp 15.000\n");
    printf("2. Nasi Goreng - Rp 12.000\n");
    printf("3. Sambal - Rp 5.000\n");
    printf("Pilih makanan (1-3): ");
}

void tampilkan_menu_minuman() {
    printf("Menu Minuman:\n");
    printf("1. Teh - Rp 3.000\n");
    printf("2. Jeruk - Rp 5.000\n");
    printf("3. Air Mineral - Rp 2.000\n");
    printf("Pilih minuman (1-3): ");
}

int hitung_harga_makanan(int pilihan, int qty) {
    int harga = 0;
    switch (pilihan) {
        case 1: harga = 15000 * qty; break;
        case 2: harga = 12000 * qty; break;
        case 3: harga = 5000 * qty; break;
        default: printf("Pilihan tidak valid\n"); break;
    }
    return harga;
}

int hitung_harga_minuman(int pilihan, int qty) {
    int harga = 0;
    switch (pilihan) {
        case 1: harga = 3000 * qty; break;
        case 2: harga = 5000 * qty; break;
        case 3: harga = 2000 * qty; break;
        default: printf("Pilihan tidak valid\n"); break;
    }
    return harga;
}

int main() {
    int total = 0;
    int pilihan_utama, pilihan_makanan, pilihan_minuman, qty;

    while (1) {
        tampilkan_menu_utama();
        scanf("%d", &pilihan_utama);

        switch (pilihan_utama) {
            case 1:
                tampilkan_menu_makanan();
                scanf("%d", &pilihan_makanan);
                printf("Masukkan jumlah: ");
                scanf("%d", &qty);
                total += hitung_harga_makanan(pilihan_makanan, qty);
                break;
            case 2:
                tampilkan_menu_minuman();
                scanf("%d", &pilihan_minuman);
                printf("Masukkan jumlah: ");
                scanf("%d", &qty);
                total += hitung_harga_minuman(pilihan_minuman, qty);
                break;
            case 3:
                printf("Total biaya: Rp %d\n", total);
                break;
            case 4:
                continue;
            case 5:
                printf("Terima kasih telah menggunakan program ini!\n");
                return 0;
            default:
                printf("Pilihan tidak valid, silakan coba lagi.\n");
                break;
        }
    }

    return 0;
}
